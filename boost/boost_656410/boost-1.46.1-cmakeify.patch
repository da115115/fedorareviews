+    add_custom_target(${LIBNAME})
+    separate_arguments(THIS_LIB_VARIANT)
+    boost_library_variant(${LIBNAME} ${THIS_LIB_VARIANT})
+  endif ()
+endmacro(boost_add_single_library)
